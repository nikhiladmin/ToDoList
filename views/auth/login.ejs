<%- include("../includes/header",{pageTitle : pageTitle}) -%>

<%- include("../includes/navigation") -%>

<div class="auth">
    <h1>Welcome Back</h1>
    <h2>Login</h2>
    <%if(errorMessage){%>
        <div class="flash-message">
        <%= errorMessage %>        
        </div>
        <%} %>
    <form action="/login" method="POST">
        <input type="email" name="email" value="<%=oldInput.email%>" placeholder="Email ID">
        <input type="Password" name="password" value="<%=oldInput.password%>" placeholder="Password">
        <button class="btn" type="submit">Login</button>
    </form>
</div>

<%- include("../includes/footer") -%>